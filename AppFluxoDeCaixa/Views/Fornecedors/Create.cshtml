@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Cadastro de Fornecedor</h1>

<h4>Fornecedor</h4>
<hr />
<form asp-action="Create">

    <div class="row">
        <div class="col-12 col-md-5 mt-4">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-4">
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-4 mt-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-5 mt-4">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <input type="hidden" asp-for="DataCadastro" class="form-control" value=@DateTime.Now.ToString(" yyyy-MM-dd hh:mm:ss") />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Ativo" value="true" />
        </div>
    </div>
    <div class="row">
        <div class="col col-md-4 mt-4">
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Cancelar</a>
            </div>
        </div>
        <div class="col-2 col-md mt-4"></div>
        <div class="col col-md-4 mt-4">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success w-100" />
            </div>
        </div>

    </div>
</form>

@model AppFluxoDeCaixa.Models.Fornecedor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fornecedor</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-12 col-md-6 mt-4">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-4">
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-4">
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-12 col-md-5 mt-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-3 mt-4">
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md mt-4">
            <div class="form-group form-check">
                <label>
                    Ativo?
                </label>
                <div class="form-check form-switch form-control-lg">

                    <input class="form-check-input" type="checkbox" role="switch" asp-for="Ativo" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col col-md-4 mt-4">
            <div>
                <a class="w-100" asp-action="Index">Cancelar</a>
            </div>
        </div>
        <div class="col-2 col-md mt-4"></div>
        <div class="col col-md-4 mt-4">
            <div class="form-group ">
                <input type="submit" value="Save" class="btn btn-primary w-100" />
            </div>
        </div>
    </div>
</form>
